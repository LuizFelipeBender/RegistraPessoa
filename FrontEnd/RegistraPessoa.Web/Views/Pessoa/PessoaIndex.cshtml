@model IEnumerable<RegistraPessoa.Web.Models.PessoaModel>

<br/>
<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Pessoas List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="PessoaCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Create New Pessoa
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Category
                </th>
                <th>
                    Idade
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Nome
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @((item.Idade).ToString("c"))
                    </td>
                    <td>
                       <a asp-action="PessoaUpdate" class="btn btn-success" asp-route-id="@item.Id">
                           <i class="fas fa-edit"></i>
                       </a>
                       <a asp-action="PessoaDelete" class="btn btn-danger" asp-route-id="@item.Id">
                           <i class="fas fa-trash"></i>
                       </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>